{
  "name": "@anonx3247/email-mcp",
  "version": "0.1.1",
  "description": "Email MCP server with IMAP and SMTP support",
  "type": "module",
  "main": "server/index.js",
  "bin": {
    "email-mcp": "server/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node server/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "build:mcpb": "tsup && mcpb pack"
  },
  "keywords": ["mcp", "email", "imap", "smtp"],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "imapflow": "^1.0.172",
    "nodemailer": "^6.10.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
